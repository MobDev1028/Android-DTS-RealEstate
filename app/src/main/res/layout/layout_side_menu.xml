<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_side_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bg_image"
        android:scaleType="centerCrop" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nv_drawer_items"
        android:layout_width="@dimen/sideMenuWidth"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/drawer"
        android:layout_alignParentEnd="true"
        app:theme="@style/NavigationDrawerStyle"
        android:layout_marginTop="20dp">

    </android.support.design.widget.NavigationView>

    <TextView
        android:text="DTS0131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nv_drawer_items"
        android:layout_alignRight="@+id/nv_drawer_items"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />


</RelativeLayout>